    function setStore(v){ localStorage.setItem("jarvisChats", JSON.stringify(v)); }

    function renderChatList(){
      const store = getStore();
      chatListEl.innerHTML = "";
      for(const [id,chat] of Object.entries(store)){
        const div = document.createElement("div");
        div.className="chat-item"+(id===currentChatId?" active":"");
        div.textContent=chat.title;
        div.onclick=()=>setActiveChat(id);
        chatListEl.appendChild(div);
      }
    }
    function setActiveChat(id){
      const store = getStore();
      const chat = store[id]; if(!chat) return;
      currentChatId=id;
      chatTitleEl.firstChild.textContent=chat.title+" ";
      logEl.textContent=chat.messages||"";
      renderChatList();
    }
    function append(text){
      const store = getStore();
      const chat = store[currentChatId];
      chat.messages=(chat.messages||"")+text;
      setStore(store);
      logEl.textContent=chat.messages;
      logEl.scrollTop=logEl.scrollHeight;
    }

    async function sendMessage(q){
      append(`üßë‚Äçüí¨: ${q}\n`);
